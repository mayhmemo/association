<div class="row">
  <%= render partial: 'dashboard/card_graph', locals: {
    title: 'Associados',
    chart: ->(data) { pie_chart(data) },
    data: @active_people_pie_chart
  } %>

  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Meus últimos cadastros</h5>
        <ul>
          <% @my_people.each do |person| %>
            <li><%= person.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row mt-2">
  <%= render partial: 'dashboard/card_graph', locals: {
    title: 'Últimos débitos',
    chart: ->(data) { line_chart(data) },
    data: @last_debts
  } %>

  <%= render partial: 'dashboard/card_graph', locals: {
    title: 'Últimos pagamentos',
    chart: ->(data) { line_chart(data) },
    data: @last_payments
  } %>
</div>